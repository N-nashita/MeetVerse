<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="650.0" spacing="0.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.meetverse.Controllers.HomeController" stylesheets="@Homepage.css">
   <children>
      <Label text="MeetVerse" styleClass="title">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
      <Label text="Schedule Smart, Meet Better" styleClass="subtitle">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button mnemonicParsing="false" text="Sign Up" styleClass="sign-up-button" onAction="#handleSignUpButton" />
      <HBox alignment="CENTER" spacing="4.0" styleClass="footer">
         <children>
            <Label text="Already have an account?" styleClass="footer-text" />
            <Hyperlink text="Login" styleClass="footer-link" onAction="#handleLoginLink" />
         </children>
      </HBox>
   </children>


</VBox>
